[Unit]
Description=Consul agent
Requires=network.target
After=network.target

[Service]
User={{ nomad_worker_user_name }}
Restart=on-failure
Type=simple
ExecStart=/usr/local/bin/nomad agent -config={{ nomad_worker_config_dir }}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT


[Install]
WantedBy=multi-user.target